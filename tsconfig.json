{
  "compilerOptions": {
    "incremental": true,
    "target": "es2022",
    "isolatedModules": true,
    "moduleDetection": "force",
    "resolveJsonModule": true,
    "lib": [
      "es2022",
      "DOM",
      "DOM.Iterable"
    ],
    "allowJs": true,
    "useDefineForClassFields": true,
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": false,
    "strictFunctionTypes": false,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    // "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noEmit": true,
    "composite": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node", //Cannot find module 'pliny/mdx-components' or its corresponding type declarations.ts(2307) //bundler //esnext
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/types/*": [
        "types/*"
      ],
      "@/app/*": [
        "app/*"
      ],
      "@/utils/*": [
        "utils/*"
      ],
      "@/constants/*": [
        "constants/*"
      ],
      "@/components/*": [
        "components/*"
      ],
      "@/data/*": [
        "data/*"
      ],
      "@/layouts/*": [
        "layouts/*"
      ],
      "@/libs/*": [
        "libs/*"
      ],
      "@/css/*": [
        "css/*"
      ],
      "contentlayer/generated": [
        "./.contentlayer/generated"
      ],
      "@/*": [
        "./*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.js",
    "**/*.mjs",
    "**/*.ts",
    "**/*.tsx",
    "**/*.json",
    ".contentlayer/generated",
    ".contentlayer/generated/**/*.json",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}